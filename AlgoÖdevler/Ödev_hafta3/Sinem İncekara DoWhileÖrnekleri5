package algoritma;

import java.util.Scanner;

public class DoWhileÖrnekleri1 {

	public static void main(String[] args) {
	
		Scanner scan=new Scanner(System.in);
		int number ;
		System.out.println("Bir Sayi Giriniz");
		number=scan.nextInt();
		
		do {
			System.out.println("Girilen Sayi:"+number);// Kullanııcıdan alınan sayıyı ekrana yazdırır 
			System.out.println("Bir Sayi Daha Giriniz:");// Kullanıcıdan Bir sayı daha ister
			number=scan.nextInt();
		}
		while(number !=0);// Kullanıcı 0 Girene kadar devam eder
		
		System.out.println("Program sona erdi ");
		
	}

}
