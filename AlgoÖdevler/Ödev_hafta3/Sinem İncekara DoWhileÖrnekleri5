package algoritma;

import java.util.Scanner;

public class DoWhileÖrnekleri2 {

	public static void main(String[] args) {
		//Sayı Tahmini Yapalım 
		Scanner scan=new Scanner(System.in);
		
		int Tahmin;
		int ArananSayi=20;
		
		do {
			System.out.println("Tahminizi Giriniz:");
			Tahmin=scan.nextInt();
			if(ArananSayi==Tahmin) {
				System.out.println("Tebrikler kazandınız !!!");
			}
			else if(ArananSayi<Tahmin) {
				System.out.println(" Daha Küçük Bir Sayi Giriniz :");
			}
			else if(ArananSayi>Tahmin) {
				System.out.println("Daha Büyük Bir Sayi Giriniz:");
				
			}
		} while(Tahmin!=ArananSayi);
		
	}


}
