package algoritma;

import java.util.Scanner;

public class DoWhileÖrnek4 {

	public static void main(String[] args) {
		Scanner scan=new Scanner(System.in); 
		int sayi;

	        do {
	            System.out.print("Pozitif bir sayı giriniz: ");
	            sayi = scan.nextInt();
	        } while (sayi <= 0);

	        System.out.println("Girdiğiniz sayı: " + sayi);

	}

}
