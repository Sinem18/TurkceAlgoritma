package algoritma;

import java.util.Scanner;

public class DoWhileKullanımı {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
Scanner scan=new Scanner(System.in);

 int i=100;
 do {
	 System.out.println(i);
	 i--;
	 
 }
 while(i>0); {
	 System.out.println(i);
	 
 }
	}

}
